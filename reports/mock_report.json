{
  "secrets": [
    {
      "scanner": "gitleaks",
      "rule_id": "GL001",
      "file_path": "api/auth.py",
      "severity": "HIGH",
      "message": "Hardcoded AWS secret key found in file"
    },
    {
      "scanner": "gitleaks",
      "rule_id": "GL002",
      "file_path": "scripts/db_init.py",
      "severity": "LOW",
      "message": "Possible credential pattern - verify"
    }
  ],
  "iac": [
    {
      "scanner": "checkov",
      "rule_id": "CKV_AWS_20",
      "file_path": "infra/s3.tf",
      "severity": "CRITICAL",
      "message": "S3 bucket allows public read access"
    },
    {
      "scanner": "checkov",
      "rule_id": "CKV_AWS_6",
      "file_path": "infra/main.tf",
      "severity": "MEDIUM",
      "message": "IAM role with wildcard permissions"
    }
  ],
  "container": [
    {
      "scanner": "trivy",
      "rule_id": "TRV-001",
      "file_path": "Dockerfile",
      "severity": "MEDIUM",
      "message": "OpenSSL version in image is outdated"
    }
  ]
}
